<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/first"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--title-->

    <FrameLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/ex_vec_1">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/maplestorylight"
            android:textSize="30sp"
            android:text="스터디 소개" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/study_name_yellow_box"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        >

        <TextView
            android:id="@+id/study_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="TextView"
            style="@style/font_study_name" />


    </FrameLayout>

    <LinearLayout
        android:id="@+id/fourth"
        android:layout_width="wrap_content"
        android:layout_height="750dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_gray"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/study_picture"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_margin="15dp"/>

        <FrameLayout
            android:id="@+id/rectangle_5"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_575">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/study_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="소개" />

                <TextView
                    android:id="@+id/study_make"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="개설" />

                <TextView
                    android:id="@+id/study_honey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="모은 꿀" />

                <TextView
                    android:id="@+id/study_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="멤버" />


            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/bt_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/btn_report"
                android:text="신고하기"
                android:textColor="#ffffff"
                android:minHeight="0dp"
                android:layout_marginVertical="8dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="14dp"/>

            <Button
                android:id="@+id/bt_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:background="@drawable/btn_apply"
                android:text="신청하기"
                android:textColor="#ffffff"
                android:minHeight="0dp"
                android:layout_marginVertical="8dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="14dp"/>

            <Button
                android:id="@+id/bt_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/btn_ask"
                android:text="문의하기"
                android:textColor="#ffffff"
                android:minHeight="0dp"
                android:layout_marginVertical="8dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="14dp"/>
            />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>