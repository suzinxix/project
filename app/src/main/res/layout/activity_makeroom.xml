<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3C94E">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="스터디 개설"
            android:fontFamily="@font/maplestorylight"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/layout_rounded_white"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        style="@style/make_Title"
        android:text="스터디 개설" />
        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/ScrollView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ECEBEB"
        android:gravity="center_horizontal|center_vertical"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ECEBEB"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                style="@style/make_Big"
                android:text="스터디룸 이름을 적어주세요" />

            <EditText
                android:id="@+id/et_roomname"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                style="@style/make_Big"
                android:text="스터디룸에 대한 소개글을 작성해 주세요" />

            <EditText
                android:id="@+id/et_roominfo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:padding="5dp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                style="@style/make_Big"
                android:text="최대 가입 인원을 설정해주세요." />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:paddingHorizontal="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_roomperson"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:inputType="numberSigned"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    style="@style/make_Big"
                    android:text="명" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                style="@style/make_Big"
                android:text="스터디룸의 카테고리를 설정해 주세요." />

            <RadioGroup
                android:id="@+id/rb_group2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/RadioStyle"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:checked="true"
                    style="@style/make_Sub"
                    android:text="습관" />

                <RadioButton
                    android:id="@+id/rb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/make_Sub"
                    android:text="공부" />

                <RadioButton
                    android:id="@+id/rb_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/make_Sub"
                    android:text="취미" />

                <RadioButton
                    android:id="@+id/rb_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/make_Sub"
                    android:text="운동" />

                <RadioButton
                    android:id="@+id/rb_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/make_Sub"
                    android:text="기타" />
            </RadioGroup>

            <Switch
                android:id="@+id/switch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/make_Big"
                android:paddingHorizontal="5dp"
                android:theme="@style/Switch1"
                android:text="그룹 비공개" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="5dp">

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/make_Big"

                    android:theme="@style/Switch1"
                    android:text="인증 요일 설정" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-10dp"
                    android:layout_marginBottom="-10dp">

                    <CheckBox
                        android:id="@+id/bt_mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.50"
                        android:scaleY="0.50"
                        android:layout_marginRight="-10dp"

                        android:button="@null"
                        android:background="@drawable/checkbox_custom"
                         />
                    <TextView
                        android:id="@+id/tv_mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/make_Sub_Unselected"
                        android:layout_gravity="center"
                        android:text="월요일"/>

                    <CheckBox
                        android:id="@+id/bt_tus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.50"
                        android:scaleY="0.50"
                        android:layout_marginRight="-10dp"
                        android:button="@null"
                        android:background="@drawable/checkbox_custom"
                        />
                    <TextView
                        android:id="@+id/tv_tus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/make_Sub_Unselected"
                        android:layout_gravity="center"
                        android:text="화요일"/>

                    <CheckBox
                        android:id="@+id/bt_wed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.50"
                        android:scaleY="0.50"
                        android:layout_marginRight="-10dp"
                        android:button="@null"
                        android:background="@drawable/checkbox_custom"
                        />
                    <TextView
                        android:id="@+id/tv_wed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/make_Sub_Unselected"
                        android:layout_gravity="center"
                        android:text="수요일"/>

                    <CheckBox
                        android:id="@+id/bt_thu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.50"
                        android:scaleY="0.50"
                        android:layout_marginRight="-10dp"
                        android:button="@null"
                        android:background="@drawable/checkbox_custom"
                        />
                    <TextView
                        android:id="@+id/tv_thu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/make_Sub_Unselected"
                        android:layout_gravity="center"
                        android:text="목요일"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-10dp">

                    <CheckBox
                        android:id="@+id/bt_fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.50"
                        android:scaleY="0.50"
                        android:layout_marginRight="-10dp"
                        android:button="@null"
                        android:background="@drawable/checkbox_custom"
                        />
                    <TextView
                        android:id="@+id/tv_fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/make_Sub_Unselected"
                        android:layout_gravity="center"
                        android:text="금요일"/>

                    <CheckBox
                        android:id="@+id/bt_sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.50"
                        android:scaleY="0.50"
                        android:layout_marginRight="-10dp"
                        android:button="@null"
                        android:background="@drawable/checkbox_custom"
                        />
                    <TextView
                        android:id="@+id/tv_sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/make_Sub_Unselected"
                        android:layout_gravity="center"
                        android:text="토요일"/>

                    <CheckBox
                        android:id="@+id/bt_sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.50"
                        android:scaleY="0.50"
                        android:layout_marginRight="-10dp"
                        android:button="@null"
                        android:background="@drawable/checkbox_custom"
                        />
                    <TextView
                        android:id="@+id/tv_sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/make_Sub_Unselected"
                        android:layout_gravity="center"
                        android:text="일요일"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/make_Big"
                android:paddingHorizontal="5dp"
                android:text="인증 방식 선택" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/make_Sub2"
                android:paddingHorizontal="5dp"
                android:text="인증 방식 선택과 별개로 타이머와 사진 기능을 모두 이용 가능합니다." />
            <RadioGroup
                android:id="@+id/rb_group1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/RadioStyle"
                android:paddingHorizontal="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/make_Sub"
                    android:checked="true"
                    android:text="횟수" />

                <RadioButton
                    android:id="@+id/rb_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/make_Sub"
                    android:text="시간" />
            </RadioGroup>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:layout_marginTop="7dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/make_Big"
                    android:text="인증 시간 설정" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/make_Sub2"
                    android:text="인증 방식이 시간일 경우 인증할 시간을 선택해야 합니다." />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/make_Sub"
                        android:text="시작 시각" />

                    <Button
                        android:id="@+id/bt_stTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_trans"
                        style="@style/make_Time_off"
                        android:text="오전 8:00" />
                    <Switch
                        android:id="@+id/switch2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/make_Big"
                        android:theme="@style/Switch1"
                        android:visibility="invisible"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/make_Sub"
                        android:text="종료 시각" />

                    <Button
                        android:id="@+id/bt_edTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_trans"
                        style="@style/make_Time_off"
                        android:text="오후 11:00" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    style="@style/make_Big"
                    android:text="인증 횟수 설정 (일주일에 n회)" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    style="@style/make_Sub2"
                    android:text="인증 방식이 횟수일 경우 인증 횟수를 설정해야 합니다." />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:paddingHorizontal="5dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_roomauth"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:background="@drawable/edittext_rounded_corner_rectangle"
                        android:inputType="numberSigned"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        style="@style/make_Big"
                        android:text="회" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        </ScrollView>


    <Button
        android:id="@+id/bt_makeroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_red_round"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:minHeight="0dp"
        android:paddingHorizontal="14dp"
        android:paddingVertical="5dp"
        android:layout_marginTop="5dp"
        android:text="개설하기"
        android:textColor="#ffffff" />


    </LinearLayout>
</LinearLayout>