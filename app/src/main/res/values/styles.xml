<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="make_Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="make_Big">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">13dp</item>
    </style>
    <style name="make_Sub">
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">11dp</item>
    </style>
    <style name="make_Sub_Unselected">
        <item name="android:textColor">@color/inactiveText</item>
        <item name="android:textSize">10dp</item>
    </style>
    <style name="make_Sub_Selected">
        <item name="android:textColor">@color/activeText</item>
        <item name="android:textSize">10dp</item>
    </style>
    <style name="make_Sub2">
        <item name="android:textColor">@color/subText</item>
        <item name="android:textSize">10dp</item>
    </style>
    <style name="make_Time">
        <item name="android:textColor">@color/impoRed</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="make_Time_off">
        <item name="android:textColor">@color/subText</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="make_Timer">
        <item name="android:textColor">@color/honeyYellow</item>
        <item name="android:textSize">50dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Switch1" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/honeyYellow</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/lightlightGray
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/transparentGray
        </item>
    </style>
    <style name="RadioStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/honeyYellow</item>
        <item name="colorSwitchThumbNormal">@color/lightlightGray
        </item>
    </style>
    <style name = "font_home">
        <item name = "android:textSize">30dp</item>
        <item name = "android:textColor">#ffffff</item>
    </style>
    <style name = "font_study_name">
        <item name = "android:textSize">25dp</item>
        <item name = "android:textColor">#ffffff</item>
    </style>
    <style name = "btn_style">
        <item name = "android:textSize">15dp</item>
        <item name = "android:textColor">#ffffff</item>
        <item name = "android:minHeight">0dp</item>
        <item name = "android:layout_marginVertical">5dp</item>
        <item name = "android:paddingHorizontal">14dp</item>
    </style>

    <style name="weekly">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15dp</item>
    </style>
</resources>